@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}
<style>
    body {
        background-image: url(https://info.vincarta.com/hubfs/Imported_Blog_Media/AdobeStock_90529653.jpeg);
        background-repeat: no-repeat;
    }

    form {
        backdrop-filter: blur(8px);
        border-radius:2%;
    }

        form a {
            display: flex;
            justify-content: center;
            text-decoration: none;
            color: dodgerblue;
        }


</style>
<center><h1>@ViewData["Title"]</h1></center>
<div class="center">

    <div>
        <div class="row">
            <section>
                <hr />
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="Username..." />
                        <label asp-for="Input.UserName" class="form-label">Потребителско име</label>
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Парола</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Вход</button>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрация</a>
                        </p>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Забравена парола</a>
                        </p>
                    </div>
                    
                   
                </form>
             
            </section>
        </div>
        <div class="col-md-6 col-md-offset-2">
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


