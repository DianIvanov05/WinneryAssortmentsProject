@using Microsoft.AspNetCore.Identity
@using WineryAssortments.Data
@inject SignInManager<Customer> SignInManager
@inject UserManager<Customer> UserManager


<ul class="navbar-nav">
    <form class="d-flex" asp-controller="Wines" asp-action="Index">
        <input class="form-control me-sm-2" type="search" placeholder="Търси ... " name="searchString">
        <button class="searchBtn" type="submit">Търси🔍</button>
    </form>
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Изход</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Вход</a>
        </li>
    }
</ul>