<h1 class="HeadingDetails">Детайли за категория на вино</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateModified)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateModified)
        </dd>
    </dl>
</div>
<div class="DetailsBtn">
    <div class="form-group">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Запази промените</a>
    </div>
    <div class="BackHome">
        <a asp-action="Index" class="btn btn-primary">Назад</a>
    </div>
</div>
